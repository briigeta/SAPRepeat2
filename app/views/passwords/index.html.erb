<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="#">EasyPass</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
            <li class="nav-item">
            <span class="nav-link">Welcome, <%= current_user.email %></span>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
<h1>Welcome to Easy Password Manager!</h1>
<h3> Here are the last passwords you have saved! </h3>
<table>
  <thead>
    <tr>
      <th>Website</th>
      <th>Username</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passwords.each do |password| %>
      <tr>
        <td><%= password.website %></td>
        <td><%= password.username %></td>
        <td><%= password.password %></td>
        <td><%= link_to 'Show', password, class: "linkdesign" %></td>
        <td><%= link_to 'Edit', edit_password_path(password), class:"linkdesign" %></td>
        <td>
        <%= form_with(model: password, url: delete_password_path(password), method: :delete, local: true) do |form| %>
          <%= form.submit 'Delete', data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
        <% end %>
      </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Password', new_password_path, class:"linkdesign" %>
</body>
