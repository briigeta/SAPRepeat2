<body>
<h1>Welcome to Easy Password Manager!</h1>
<h3> Here are the last passwords you have saved! </h3>
<table>
  <thead>
    <tr>
      <th>Website</th>
      <th>Username</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passwords.each do |password| %>
      <tr>
        <td><%= password.website %></td>
        <td><%= password.username %></td>
        <td><%= password.password %></td>
        <td><%= link_to 'Show', password, class: "linkdesign" %></td>
        <td><%= link_to 'Edit', edit_password_path(password), class:"linkdesign" %></td>
        <td>
        <%= form_with(model: password, url: delete_password_path(password), method: :delete, local: true) do |form| %>
          <%= form.submit 'Delete', data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
        <% end %>
      </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Password', new_password_path, class:"linkdesign" %>
</body>
